<%= form_for @drink do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control", :rows => '3'  %>
  </div>
  <div class="form-group">
    <%= f.label :recipe %>
    <%= f.text_area :recipe, :class => "form-control", :rows => '3' %>
  </div>
  <div class="form-group">
    <%= f.label :strength %>
    <%= f.select :strength, %w(1 2 3 4 5), {},  :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :'how challenging?' %>
    <%= f.select :risk, %w(1 2 3 4 5), {},  :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.select :color, %w(light dark), {},  :class => "form-control" %>
  </div>

<div class="row">
  <div class="col-md-4">
    <%= check_box_tag(:day_party) %>
    <%= label_tag(:day_party, "Day Party Drink") %>
    <br>
    <%= check_box_tag(:vacation) %>
    <%= label_tag(:vacation, "Vacation Drink") %>
  </div>

  <div class="col-md-4">
    <%= check_box_tag(:day_drinking) %>
    <%= label_tag(:day_drinking, "Day Drinking") %>
  <br>
    <%= check_box_tag(:dinner_drinks) %>
    <%= label_tag(:dinner_drinks, "Dinner Drinks") %>
  </div>
   <div class="col-md-4">
    <%= check_box_tag(:evening_drinks) %>
    <%= label_tag(:evening_drinks, "Evening Drinks") %>
    <br>
    <%= check_box_tag(:night_in) %>
    <%= label_tag(:night_in, "A Night In") %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">

  <%= check_box_tag(:fruity) %>
  <%= label_tag(:fruity, "Fruity") %>
  <br>
  <%= check_box_tag(:tropical) %>
  <%= label_tag(:tropical, "Tropical") %>
  <br>
  <%= check_box_tag(:bitter) %>
  <%= label_tag(:bitter, "Bitter") %>
</div>

<div class="col-md-3">
  <%= check_box_tag(:herbal) %>
  <%= label_tag(:herbal, "Herbal") %>
  <br>
  <%= check_box_tag(:citrusy) %>
  <%= label_tag(:citrusy, "Citrusy") %>
  <br>
  <%= check_box_tag(:sweet) %>
  <%= label_tag(:sweet, "Sweet") %>
  </div>

  <div class="col-md-3">
    <%= check_box_tag(:dry) %>
    <%= label_tag(:dry, "Dry") %>
    <br>
    <%= check_box_tag(:refreshing) %>
    <%= label_tag(:refreshing, "Refreshing") %>
    <br>
    <%= check_box_tag(:light) %>
    <%= label_tag(:light, "Light") %>
  </div>
  <div class="col-md-3">
  <%= check_box_tag(:dark) %>
  <%= label_tag(:dark, "Dark") %>
  <br>
  <%= check_box_tag(:intense) %>
  <%= label_tag(:intense, "Intense") %>
  <br>
  <%= check_box_tag(:challenging) %>
  <%= label_tag(:challenging, "Challenging") %>

  </div>
</div>

<button type="submit" class="btn btn-default">Edit</button>

<% end %>