<%= form_for @drink do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control", :rows => '3'  %>
  </div>
  <div class="form-group">
    <%= f.label :recipe %>
    <%= f.text_area :recipe_list, :class => "form-control", :rows => '4' %>
  </div>
  <div class="form-group">
    <%= f.label :strength %>
    <%= f.select :strength, %w(1 2 3 4 5), {},  :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :'how challenging?' %>
    <%= f.select :risk, %w(1 2 3 4 5), {},  :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.select :color, %w(light dark), {},  :class => "form-control" %>
  </div>


<button type="submit" class="btn btn-default">Edit</button>

<% end %>

<div class="row">
  <div class="col-md-12"><%= link_to 'Add Occasion', new_drink_path, class: "btn btn-default" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12"><%= link_to 'Add Season', new_drink_path, class: "btn btn-default" %>
</div>
</div>
<div class="row">
  <div class="col-md-12"><%= link_to 'Add Flavor', new_drink_path, class: "btn btn-default" %>
</div>
</div>